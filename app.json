{
    "name": "Scoreboard API",
    "description": "A RESTful API to manage a scoreboard for a particular tournament.",
    "repository": "https://github.com/infinity-plus/scoreboard-api",
    "logo": "",
    "keywords": [
        "python",
        "fastapi",
        "restful"
    ],
    "image": "heroku/python",
    "formation": {
        "web": {
            "quantity": 1,
            "size": "free"
        }
    },
    "env": {
        "SECRET": {
            "description": "A secret key for hashing. Get one using `openssl rand -hex 32`"
        }
    },
    "addons": [{
        "plan": "heroku-postgresql"
    }]
}